<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="recordId" type="String" label="Record Id" description="Automatically bind the page's record id to the component variable" default="{!recordId}" />
            <property name="showFollow" type="Boolean" label="showFollow" description="Show join group button" default='false' /> 
            <property name="showAskAQuestion" type="Boolean" label="showAskAQuestion" description="Show Ask a question button" default='false' />
            <property name="showCreateAnGroup" type="Boolean" label="showCreateAnGroup" description="Show Create an Idea button" default='false' />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>