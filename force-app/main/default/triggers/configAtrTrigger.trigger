trigger configAtrTrigger on SBQQ__ConfigurationAttribute__c (before delete) {
 if(globalApexManager.avoidRecursion('conAttBeforeDelete') ) {
        return;
    }
restrictDelete.restrictDeletion('Configuration Attribute',Trigger.Old);
}