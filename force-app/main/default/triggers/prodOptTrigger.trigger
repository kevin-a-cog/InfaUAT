trigger prodOptTrigger on SBQQ__ProductOption__c (before delete) {
 if(globalApexManager.avoidRecursion('prodOptBeforeDelete') ) {
        return;
    }
restrictDelete.restrictDeletion('Product Option',Trigger.Old);
}